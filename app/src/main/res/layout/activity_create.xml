<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ajklen.lostandfound.CreateActivity$PlaceholderFragment"
    android:focusable="true">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:id="@+id/switch1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current"
        android:id="@+id/btn_current"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical|right"
        android:layout_marginEnd="52dp"
        android:layout_below="@+id/switch1"
        android:layout_alignEnd="@+id/switch1"
        android:onClick="setCoord"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/btn_map"
        android:layout_marginStart="60dp"
        android:layout_alignTop="@+id/btn_current"
        android:layout_alignStart="@+id/switch1"
        android:onClick="setMap"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lost"
        android:layout_marginRight="20dp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/switch1"
        android:layout_toStartOf="@+id/switch1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="20dp"
        android:text="Found"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/switch1"
        android:layout_toEndOf="@+id/btn_current" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/text_name"
        android:gravity="center_horizontal"
        android:layout_below="@+id/btn_current"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        android:id="@+id/textView4"
        android:layout_below="@+id/text_name"
        android:layout_alignEnd="@+id/btn_current"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/text_lat"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/text_lon"
        android:layout_below="@+id/text_lat"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Item name"
        android:id="@+id/text_item"
        android:layout_alignTop="@+id/text_lat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:clickable="true"
        android:inputType="text"
        android:minWidth="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:ems="10"
        android:id="@+id/text_description"
        android:layout_below="@+id/text_item"
        android:layout_toStartOf="@+id/text_lon"
        android:hint="Item description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_btn"
        android:src="@android:drawable/ic_menu_camera"
        android:onClick="chooseImage"
        android:layout_alignTop="@id/text_description"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/text_description"
        android:layout_marginBottom="10dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter" />
</RelativeLayout>
